    "bitbake-setup": {
        "configurations": [
            {
                "name": "homeassistant",
                "description": "Homeassistant for Raspberry Pi 64",
                "bb-layers": [
                    "openembedded-core/meta",
                    "meta-yocto/meta-poky",
                    "meta-openembedded/meta-oe",
                    "meta-openembedded/meta-python",
                    "meta-openembedded/meta-multimedia",
                    "meta-openembedded/meta-networking",
                    "meta-openembedded/meta-filesystems",
                    "meta-python-ai",
                    "meta-clang-revival",
                    "meta-sca",
                    "meta-virtualization",
                    "meta-rauc",
                    "meta-rauc-community/meta-rauc-raspberrypi",
                    "meta-raspberrypi",
                    "meta-homeassistant"
                ],
                "bb-layers-file-relative": [
                    "meta-application"
                ],
				"oe-fragments": ["core/yocto/sstate-mirror-cdn", "machine/raspberrypi-armv8", "application/ha"],
                "oe-fragments-one-of": {
                    "distro": {
                        "description": "Distribution variants",
                        "options": ["distro/poky-altcfg"]
                    }
                }
            }
        ]
    }
